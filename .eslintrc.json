{
  "extends": "next/core-web-vitals",
  "plugins": ["react", "@typescript-eslint", "@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "react/self-closing-comp": ["error", { "component": true, "html": true }]
  }
}
